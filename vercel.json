cd /path/to/vercel-project
rm -f vercel.json

cat > vercel.json << 'EOF'
{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/api/index.js"
    },
    {
      "src": "/test",
      "dest": "/api/testsend.js"
    },
    {
      "src": "/fix",
      "dest": "/api/fix.js"
    }
  ]
}
EOF
